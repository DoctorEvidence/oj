    <script type="text/javascript" src="../vendor/js/shBrushSql.js"></script>
    <script type="text/javascript" src="js/core/integrations/afterExt.js"></script>
    
    <<%
            var buildMode = grunt.config('buildMode');
            switch(buildMode) {
                case 'dev':
                    var jsVendorFiles = grunt.file.expand(grunt.config('nsVendorJsFiles'));
                    for(var i = 0, len = jsVendorFiles.length; i < len; i += 1) {
                        print('        <script type="text/javascript" src="' + jsVendorFiles[i] + '"></script>\n');
                    }
                    var jsFiles = grunt.file.expand(grunt.config('nsAppJsFiles'));
                    for(var i = 0, len = jsFiles.length; i < len; i += 1) {
                        print('        <script type="text/javascript" src="' + jsFiles[i] + '"></script>\n');
                    }
                    break;
                default:
                 
                    print('        <script src="release/vendor.min.js"></script>\n');
                    print('        <script type="text/javascript" src="release/NS.' + grunt.template.today("yyyy.m.d") + '.min.js"></script>\n');
                    break;
            }
            
        %>
</head>

<body class="x-body x-webkit x-chrome x-reset">
</body>
</html>
